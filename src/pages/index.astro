      },
      {
        title: 'Tools',
        description:
          'JavaScript | React | Express | Node.js | MongoDB | Postman | Bootstrap | CSS3',
      },
    ]}
    image={{
      src: 'https://res.cloudinary.com/dlxrcak5o/image/upload/v1704679512/Portfolio%20Lab/Project4_app_image_ezckqf.png',
